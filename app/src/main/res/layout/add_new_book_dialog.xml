<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a new Book"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/txtNewBkTitle"
        />
   <EditText
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:hint="Book name"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/txtNewBkTitle"
       android:id="@+id/editTxtNewBkName"
       android:layout_marginTop="30dp"
       />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Author"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTxtNewBkName"
        android:id="@+id/editTxtNewkAuthor"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/editTxtNewBkPages"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:layout_below="@id/editTxtNewkAuthor"
        android:layout_marginTop="30dp"
        android:hint="Pages"
        />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTxtNewBkPages"
        android:text="Save"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignBottom="@id/btnSave"
        android:layout_toEndOf="@id/btnSave"
        android:layout_marginLeft="20dp"/>


</RelativeLayout>