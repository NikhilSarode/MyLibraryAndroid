<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity
            android:name=".WishListActivity"
            android:exported="true" />
        <activity
            android:name=".WebsiteActivity"
            android:exported="true" />
        <activity
            android:name=".CurrentlyReadingActivity"
            android:exported="true" />
        <activity
            android:name=".BookActivity"
            android:exported="true" />
        <activity
            android:name=".AllBooksActivity"
            android:exported="true"
            android:label="@string/activity_all_books" /> <!-- for custom label of an activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- exported:- whether this service can be used by other applications-->
        <service android:name=".CounterService"
            android:exported="false"
            android:description="@string/counter_service_description"
            />
        <service android:name=".CounterServiceParallel"
            android:exported="false"
            android:description="@string/counter_service_description"
            />
        <service android:name=".CounterServiceBound"
            android:exported="false"
            android:description="@string/counter_service_description"
            />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>